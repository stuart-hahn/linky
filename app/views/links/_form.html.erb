<%= form_with model: @link, local: true do |f| %>
    <%= render 'shared/errors', object: @link %>

    <%= f.label :title %>
    <%= f.text_field :title %></br>

    <%= f.label :url %>
    <%= f.url_field :url %></br>

    <% if !@community %>
        <%= f.text_field :community_title, list: "communities_autocomplete" %>
        <datalist id="communities_autocomplete">
            <% Community.all.each do |community| %>
            <option value="<%= community.title %>">
        <% end %>
        </datalist>
    <% else %>
        <%= f.hidden_field :community_id %>
    <% end %>

    <%= f.submit %>
<% end %>