<h1><%= @link.title %></h1>
<h2>Community: <%= link_to  @link.community.title, community_links_path(@link.community) %></h2>

<p>Read more: <%= link_to @link.title, @link.url %><p>

<%= link_to  "Add a comment", new_link_comment_path(@link) %>

<h3>Comments:</h3>

<% if @link.comments %>
    <% @link.comments.each do |comment| %>
        <li><%= comment.body %> - by <%= comment.user.email %></li>
    <% end %>
<% end %>

<% if current_user && current_user.owns_link?(@link) %>
    <p>
        You own this link:
        (<%= link_to 'Edit', edit_link_path(@link) %> or 
        <%= link_to 'Delete', link_path(@link), method: :delete %>)
    </p>
<% end %>